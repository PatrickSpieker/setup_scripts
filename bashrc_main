alias ll="ls -l"
alias vim="nvim"
alias vi="nvim"
alias gs="git status -uno"
alias gacp="git add . && git commit -m 'WIP' && git push origin HEAD"
alias myn='vim ~/Library/Mobile\ Documents/com~apple~CloudDocs/bamdf.md'
alias rp='vim ~/Library/Mobile\ Documents/com~apple~CloudDocs/ramen_profitable/current.txt'
alias pb='cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/web-stuff/pspieker-blog/ && JEKYLL_ENV=production bundle exec jekyll build && cp -r ./_site/* ../patrickspieker.github.io/blog'

generate_draft() {
  cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/web-stuff/pspieker-blog/_drafts
  SECS=$(date +%s)
  vim $SECS".md"
}
alias gd=generate_draft
generate_post() {
  cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/web-stuff/pspieker-blog/_posts
  YEAR=$(date +%Y)
  MONTH=$(date +%m)
  DAY=$(date +%d)
  SECS=$(date +%s)
  vim $YEAR"-"$MONTH"-"$DAY"_"$SECS".md"
}
alias gp=generate_post


# Adding things to my path
# prepending the Ruby bin path
export PATH="/usr/local/opt/ruby/bin:$PATH" 
# prepending the Ruby Gems path
export PATH="/Users/patrickspieker/.gem/bin:$PATH"
# making gem command look at the proper version of Ruby
export PATH=`gem environment gemdir`/bin:$PATH
export PATH="/usr/local/sbin:$PATH"

export JAVA_HOME="$HOME/jdk-18.0.1.1.jdk/Contents/Home"
export PATH="$JAVA_HOME/bin:$PATH"

# Creates a file so that iTerm shuts up about my last login >:)
touch ~/.hushlogin
PROMPT='%~ > '

export dr='/Users/patrickspieker/Library/Mobile Documents/com~apple~CloudDocs'
# Lmao the amount of interpolation here is TOOOOOO damn high
alias cddr="cd \"$dr\""

# Setting the default FZF command to be backed by ripgrep for speed
export FZF_DEFAULT_COMMAND='rg --files --hidden --smart-case --glob "!.git/"'

# turning off the god awful bash bell - used to happen on autocomplete
bind 'set bell-style none'

. "$HOME/.cargo/env"
